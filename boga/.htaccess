Options -Indexes

<IfModule mod_headers.c>
    Header always set X-Content-Type-Options "nosniff"
    Header always set X-Frame-Options "SAMEORIGIN"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /boga/

    # 1. TEMEL YÖNLENDİRMELER (301: .php -> SEO)
    RewriteCond %{THE_REQUEST} \s/+boga/index\.php[?\s] [NC]
    RewriteRule ^index\.php$ /boga/ [R=301,L]

    RewriteCond %{THE_REQUEST} \s/+boga/login\.php[?\s] [NC]
    RewriteRule ^login\.php$ giris [R=301,L]

    RewriteCond %{THE_REQUEST} \s/+boga/register\.php[?\s] [NC]
    RewriteRule ^register\.php$ kayit [R=301,L]

    RewriteCond %{THE_REQUEST} \s/+boga/logout\.php[?\s] [NC]
    RewriteRule ^logout\.php$ cikis [R=301,L]

    RewriteCond %{THE_REQUEST} \s/+boga/takvim\.php[?\s] [NC]
    RewriteRule ^takvim\.php$ takvim [R=301,L]

    RewriteCond %{THE_REQUEST} \s/+boga/user\.php[?\s] [NC]
    RewriteRule ^user\.php$ bogalarim [R=301,L]

    RewriteCond %{THE_REQUEST} \s/+boga/user_add_bull\.php[?\s] [NC]
    RewriteRule ^user_add_bull\.php$ boga-ekle [R=301,L]

    RewriteCond %{THE_REQUEST} \s/+boga/hesabim\.php[?\s] [NC]
    RewriteRule ^hesabim\.php$ hesabim [R=301,L]

    RewriteCond %{THE_REQUEST} \s/+boga/compare\.php[?\s] [NC]
    RewriteRule ^compare\.php$ karsilastir [R=301,L]

    RewriteCond %{THE_REQUEST} \s/+boga/compare_action\.php[?\s] [NC]
    RewriteRule ^compare_action\.php$ karsilastir-islem [R=301,L]

    # 2. VAR OLAN DOSYALARI KORU
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # 3. SEO -> .PHP (GİZLİ YÖNLENDİRMELER)
    RewriteRule ^$ index.php [L]
    RewriteRule ^giris/?$ login.php [L]
    RewriteRule ^kayit/?$ register.php [L]
    RewriteRule ^cikis/?$ logout.php [L]
    RewriteRule ^takvim/?$ takvim.php [L]
    RewriteRule ^bogalarim/?$ user.php [L]
    RewriteRule ^boga-ekle/?$ user_add_bull.php [L]
    RewriteRule ^hesabim/?$ hesabim.php [L]
    RewriteRule ^bogalar/?$ bulls.php [L]
    RewriteRule ^populer/?$ popular.php [L]
    RewriteRule ^favorilerim/?$ favorites.php [L]
	# Favori İşlemi Yönlendirmesi
RewriteRule ^favori/?$ favorite.php [L,QSA]

    # Karşılaştırma
    RewriteRule ^karsilastir/?$ compare.php [L,QSA]
    RewriteRule ^karsilastir-islem/?$ compare_action.php [L,QSA]

    # Sosyal ve Mesajlaşma
    # Önemli: mesaj/7 yapısı dm.php?u=7 ye gider
    RewriteRule ^mesaj/([0-9]+)/?$ dm.php?u=$1 [L,QSA]
    RewriteRule ^mesaj-gonder/?$ send_message.php [L,QSA]
    
    # Arkadaşlar ve App Klasörü
    RewriteRule ^friends/?$ app/friends.php [L,QSA]
    RewriteRule ^friend-add/?$ app/friend_add.php [L,QSA]
    RewriteRule ^friend-remove/?$ app/friend_remove.php [L,QSA]

    # Online İşlemleri
    RewriteRule ^online-ping/?$ app/online.php [L,QSA]
    RewriteRule ^online-list/?$ app/online_list.php [L,QSA]
    RewriteRule ^cevrimici/?$ cevrimici.php [L,QSA]

    # Admin Paneli
    RewriteRule ^admin/onay-bekleyen/?$ admin/pending.php [L]
    RewriteRule ^admin/bogalar/?$ admin/bulls.php [L]
    RewriteRule ^admin/guresler/?$ admin/matches.php [L]
    RewriteRule ^admin/kullanicilar/?$ admin/users.php [L]
    RewriteRule ^admin/takvim/?$ admin/events.php [L]

    # Boğa Detay (ID bazlı SEO)
    # Örn: /12-karabas-bogasi -> bull.php?id=12
    RewriteRule ^bull/([0-9]+)(-[^/]+)?/?$ bull.php?id=$1 [L,QSA]
    RewriteRule ^([0-9]+)(-[^/]+)?/?$ bull.php?id=$1 [L,QSA]
	
